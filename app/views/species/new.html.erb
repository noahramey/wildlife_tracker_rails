<h1>New Species</h1>

<% if @species_instance.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @species_instance.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @species_instance do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
